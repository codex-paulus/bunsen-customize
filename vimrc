set nocp

""""""""""""""""""""""""
" Look and Feel
""""""""""""""""""""""""
syntax on

" Numbers on side
set number

" Highlight currentline
" set cursorline

" Show file position
set ruler

" Show suggested max line len
" set colorcolumn=101

" Use :colorscheme <tab> to filter through all installed
colorscheme monokai

""""""""""""""""""""""""
" Search
""""""""""""""""""""""""
" Highlight search results. Use noh to remove highlighting
set hlsearch

" Search as you type
set incsearch

" Ignore case when searching
set ignorecase

""""""""""""""""""""""""
" Tabs and indent
""""""""""""""""""""""""
" Use spaces rather than tabs
set expandtab
 
" << and >> shift 4 columns
set shiftwidth=4

" Display tab as 4 spaces
set tabstop=4

